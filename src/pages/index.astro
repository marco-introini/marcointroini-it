---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import {getCollection} from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);

import img_tester from "../images/tester.jpg"
import img_api_call from "../images/api-call.jpg"
import img_cli2 from "../images/cli2.jpg"
import img_cli from "../images/cli.jpg"
---

<BaseLayout sideBarActiveItemID="home">
    <div class="pb-12 mt-5 w-full">
        <div class="text-xl py-1">Hey there ðŸ‘‹</div>
        <div class="text-5xl font-bold">Marco Introini</div>
        <div class="text-3xl py-3 font-bold">Software Engineer</div>
        <div class="py-2">
            <text class="text-lg">
                Backend Developer and API Engineer
            </text>
        </div>
        <div class="mt-8">
            <a class="btn" href="https://twitter.com/marcointro" target="_blank"> Let's connect!</a>
            <a href="https://mintdev.me" target="_blank" class="btn btn-outline ml-5">
                Got to MintDev Site
            </a>
        </div>
    </div>

    <div>
        <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
    </div>

    <HorizontalCard
            title="Layer7 API Gateway Console"
            img={img_api_call}
            desc="A OSS Console for Layer7 API Gateways. In early stage of development"
            url="https://github.com/marco-introini/layer7-console"
            badge="FOSS"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
            title="CertInfo CLI"
            img={img_cli2}
            desc="SSL Certificate check in the command line using Laravel Zero Framework."
            url="https://github.com/marco-introini/certinfo-cli"
            badge="FOSS"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
            title="ShortUrl"
            img={img_tester}
            desc="Self hosting Open Source application for shortening url with API and administration panel. In Laravel 10 and Filament 3."
            url="https://github.com/marco-introini/short-url"
            badge="FOSS"
    />

    <HorizontalCard
            title="Url tester"
            img={img_cli2}
            desc="An url tester application written in PHP/Laravel and FilamentPHP."
            url="https://github.com/marco-introini/urltester"
            badge="FOSS"
    />

    <div>
        <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
    </div>

    {
        last_posts.map((post) => (
                <>
                    <HorizontalCard
                            title={post.data.title}
                            img={post.data.heroImage}
                            desc={post.data.description}
                            url={"/blog/" + post.slug}
                            target="_self"
                            badge={post.data.badge}
                    />
                    <div class="divider my-0"/>
                </>
        ))
    }
</BaseLayout>
